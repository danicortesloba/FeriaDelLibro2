  <% if user_signed_in? && current_user.role == 'admin' %>

<p id="notice"><%= notice %></p>
<div class="product-main-area">

    <div class="row">

      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Administrar lectores</h2>
        </div>
      </div>

                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="cart-main-area mb-5">
                      <div class="container">

                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <thead>
                                    <tr>
                                      <th class="product-subtotal">Id Lector</th>
                                      <th class="product-thumbnail">Nombre</th>
                                      <th class="product-name">Apellido</th>
                                      <th class="product-subtotal">Email</th>
                                      <th class="product-subtotal">Id Usuario</th>
                                      <th class="product-price">Editar</th>
                                      <th class="product-quantity">Eliminar</th>


                                    </tr>
                                  </thead>
                                  <tbody>
                                      <% @readers.each do |reader| %>
                                        <tr>
                                          <td class="product-name"><%= reader.id %></td>
                                            <td class="product-name"><%= reader.firstname %></td>
                                            <td class="product-name"><%= reader.lastname %></td>
                                            <td class="product-name"><%= reader.user.email %></td>
                                            <td class="product-name"><%= reader.user.id %></td>
                                            <td class="product-remove"><%= link_to 'Editar', edit_reader_path(reader) %></td>
                                            <td class="product-remove"><%= link_to 'Eliminar', reader, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
                                         </tr>
                                     <% end %>
                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                            <div class="pagination-area mt-20 mb-50">
                              <div class="list-page-2">
                                <p><%= paginate @readers %></p>
                              </div>
                            </div>
                          </div>
                        </div>


                      </div>
                    </div>
                  </div>

    </div>

</div>

<% end %>
