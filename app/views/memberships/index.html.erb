<p id="notice"><%= notice %></p>
<div class="product-main-area mb-70">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Planes de Membresía</h2>
        </div>
      </div>

                  <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                    <div class="cart-main-area mb-70">
                      <div class="container">

                        <div class="row">
                          <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <tbody>

                                        <tr>
                                            <th class="product-name">Plan</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.name %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Descripción</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.description %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Duración</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit1 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Libros subidos</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit2 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Libros vendidos</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit3 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Tienda exclusiva de editorial</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit4 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Promoción de novedades en redes sociales</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit5 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Precio</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-price"><%= number_to_currency(membership.price, precision: 0) %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Contratar</th>
                                              <% @memberships.each do |membership| %>
                                                  <% if signed_in? && current_user.role == 'Editorial' %>
                                                  <td class="product-name"><%= link_to 'Contratar', membership_membership_orders_path(membership), method: :post %> </td>
                                                  <% else %>
                                                  <td class="product-name"> Ingresa con tu cuenta de editor para comprar </td>
                                                  <% end %>
                                              <% end %>
                                         </tr>

                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>

                      </div>
                    </div>
                  </div>

              <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                <div class="shop-left">
                  <div class="left-title mb-20">
                    <h4>Novedades </h4>
                  </div>
                  <div class="random-area mb-30">
                    <div class="product-active-2 owl-carousel" id=latest>
                      <div class="product-total-2">

                        <% Book.all.last(3).reverse.each do |book| %>
                            <div class="single-most-product bd mb-18">
                              <div class="most-product-img">
                                <%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %>
                              </div>
                              <div class="most-product-content">
                                <h4><%= book.author_first_name %> <%=book.author_last_name %></h4>
                                <div class="product-price">
                                    <ul>
                                        <li><a href="<%= book_path(book.id) %>"><%= book.title %></a></li><br>
                                        <li><%= number_to_currency(book.price, precision: 0) %></li>
                                    </ul>
                                </div>
                              </div>
                            </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <div class="banner-area mb-30">
                    <div class="banner-img-2">
                      <a href="#"><img src="<%= asset_path 'img/banner/33.jpg' %>" alt="banner" /></a>
                    </div>
                  </div>
                  <div class="left-title mb-20">
                    <h4>Los más comentados</h4>
                  </div>
                  <div class="random-area mb-30">
                    <div class="product-active-2 owl-carousel" id=commented>
                      <div class="product-total-2">
                        <% @bycomments.limit(3).each do |book| %>
                            <div class="single-most-product bd mb-18">
                              <div class="most-product-img">
                                <%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %>
                              </div>
                              <div class="most-product-content">
                                <h4><%= book.author_first_name %> <%=book.author_last_name %></h4>
                                <div class="product-price">
                                    <ul>
                                        <li><a href="<%= book_path(book.id) %>"><%= book.title %></a></li><br>
                                        <li><%= number_to_currency(book.price, precision: 0) %></li>
                                    </ul>
                                </div>
                              </div>
                            </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
</div>
