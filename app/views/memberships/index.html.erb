<p id="notice"><%= notice %></p>

<h1>Memberships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Benefit</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.name %></td>
        <td><%= membership.description %></td>
        <td><%= membership.benefit1 %></td>
        <td><%= number_to_currency(membership.price, precision: 0) %></td>
        <% if signed_in? && current_user.role == 'Editorial' %>
        <td><%= link_to 'Contratar', membership_membership_orders_path(membership), method: :post %> </td>
        <% else %>
        <td> Ingresa con tu cuenta de editor para comprar </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in? && current_user.role == 'admin'%>
<%= link_to 'New Membership', new_membership_path %>
<% end %>
