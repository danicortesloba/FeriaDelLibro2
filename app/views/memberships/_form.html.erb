<%= form_with(model: membership, local: true) do |form| %>
  <% if membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "errores") %> evitaron que se guarde esta membresía:</h2>

      <ul>
      <% membership.errors.each do |attribute, message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="user-login-area mb-70">
    <div class="container">
      <div class="row">

        <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
            <div class="billing-fields">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                          <%= form.label :nombre %>
                          <%= form.text_field :name, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                          <%= form.label :descripción %>
                          <%= form.text_field :description, class: 'form-control' %>
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                         <div class="form-group">
                           <%= form.label :precio %>
                           <%= form.number_field :price, class: 'form-control' %>
                         </div>
                      </div>
                      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                          <div class="form-group">
                            <%= form.label :activa %>
                            <%= form.check_box :active, class: 'form-control' %>
                          </div>
                       </div>
                  </div>
                  <div class="row">
                       <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                           <div class="form-group">
                             <%= form.label :beneficio_1 %>
                             <%= form.text_field :benefit1, class: 'form-control' %>
                           </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                              <%= form.label :beneficio_2 %>
                              <%= form.text_field :benefit2, class: 'form-control' %>
                            </div>
                         </div>
                  </div>
                  <div class="row">
                         <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                             <div class="form-group>
                               <%= form.label :beneficio_3 %>
                               <%= form.text_field :benefit3, class: 'form-control' %>
                             </div>
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                              <div class="form-group">
                                <%= form.label :beneficio_4 %>
                                <%= form.text_field :benefit4, class: 'form-control' %>
                              </div>
                           </div>
                  </div>


                 <div class="row">
                   <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                       <div class="form-group">
                         <%= form.label :beneficio_5 %>
                         <%= form.text_field :benefit5, class: 'form-control' %>
                       </div>
                    </div>
                     <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                      <div class="text-center mb-30">
                          <div class="buttons-cart mb-30">
                          <%= form.submit "Guardar membresía"%>
                          </div>
                      </div>
                    </div>
                 </div>
            </div>
        </div>

      </div>
    </div>
  </div>
  <% end %>
