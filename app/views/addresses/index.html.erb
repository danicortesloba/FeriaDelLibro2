<p id="notice"><%= notice %></p>
<div class="user-login-area mb-70">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Mis direcciones</h2>
        </div>
      </div>
    </div>
  </div>
</div>

<% if current_user.addresses.exists? %>
<div class="cart-main-area mb-70">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <form action="#">
          <div class="table-content table-responsive">
            <table>
              <thead>
                <tr>
                  <th class="product-thumbnail">Nombre</th>
                  <th class="product-name">Dirección</th>
                  <th class="product-price">Cambiar</th>
                  <th class="product-quantity">Eliminar</th>
                  <th class="product-subtotal">Dirección de envío</th>
                </tr>
              </thead>
              <tbody>
                <% current_user.addresses.each do |address| %>
                    <tr>
                        <td class="product-name"><%= address.title %></td>
                        <td class="product-name"><%= address.address %></td>
                        <td class="product-remove"><%= link_to 'Cambiar', edit_address_path(address) %></td>
                        <td class="product-remove"><%= link_to 'Eliminar', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% if address.default == true %>
                            <td class="product-name">Dirección actual de envío <img class="service-blue-img" src="<%= asset_path 'img/icon-img/service-1.png' %>" alt="banner" /></td>
                        <% else %>
                            <td class="product-name"><%= link_to 'Hacer dirección de envío', addresses_default_path(address) %></td>
                        <% end %>
                     </tr>
                 <% end %>
              </tbody>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% else %>
<h3> Aún no has ingresado direcciones </h3>
<% end %>

<div class="row">
            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                <div class="buttons-cart mb-30">
                    <ul>
                        <li><%= link_to 'Nueva dirección', new_address_path %></li>
                    </ul>
                </div>

            </div>
  </div>
