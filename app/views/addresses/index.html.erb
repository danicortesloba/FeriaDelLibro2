<p id="notice"><%= notice %></p>

<h1>Direcciones</h1>

<% if current_user.addresses.exists? %>

<table>
  <thead>
    <tr>

      <th>Nombre</th>
      <th>Dirección</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.addresses.each do |address| %>
      <tr>
        <td><%= address.title %></td>
        <td><%= address.address %></td>
        <td><%= link_to 'Cambiar', edit_address_path(address) %></td>
        <td><%= link_to 'Eliminar', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if address.default == true %>
        <td> Dirección actual de envío</td>
        <% else %>
        <td><%= link_to 'Hacer dirección de envío', addresses_default_path(address) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p> Aún no has ingresado direcciones </p>

<% end %>

<br>

<%= link_to 'Nueva dirección', new_address_path %>
