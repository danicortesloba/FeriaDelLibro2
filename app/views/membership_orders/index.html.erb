<p id="notice"><%= notice %></p>
<div class="product-main-area mb-70">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Mi carrito</h2>
        </div>
      </div>

      <% if @membership_orders.exists? %>
      <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
              <div class="cart-main-area mb-70">
                <div class="container">
                    <div class="row">
                      <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <form action="#">
                          <div class="table-content table-responsive">
                            <table>
                              <thead>
                                <tr>
                                  <th class="product-price">Membresía</th>
                                  <th class="product-quantity">Precio</th>
                                  <th class="product-quantity">Borrar</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% @membership_orders.each do |membership_order| %>
                                <tr>
                                  <td class="product-quantity"><h4><a href="<%= memberships_path %>"><%= membership_order.membership.name %></a></h4></td>
                                  <td class="product-quantity"><span class="amount"><h4><%= number_to_currency(membership_order.membership.price, precision:0) %></h4></span></td>
                                  <td class="product-quantity"><p><%= link_to 'Borrar', membership_order, method: :delete %></p></td>
                                </tr>
                                <% end %>
                              </tbody>
                            </table>
                          </div>
                        </form>
                      </div>
                    </div>
                    <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                    <div class="wc-proceed-to-checkout">
                                        <h2>Total: <span class="amount"><%= number_to_currency(@total, precision: 0) %> </span></h2><br>
                                    </div>
                                    <div class="wc-proceed-to-checkout">
                                      <% if signed_in? && current_user.publisher.method == 'Paypal'%>
                                        <%= link_to 'Pagar', pre_pay_millings_path %>
                                      <br>
                                      <% else %>
                                        <%= link_to 'Pagar', alternative_millings_path%>
                                      <% end %>
                                    </div>
                                </div>
                    </div>
                </div>
              </div>
      </div>

      <% else %>
      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
            <p>No tienes ninguna membresía por comprar </p>
        </div>
      </div>
      <% end %>
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
          <div class="shop-left">
            <div class="left-title mb-20">
              <h4>Novedades </h4>
            </div>
            <div class="random-area mb-30">
              <div class="product-active-2 owl-carousel" id=latest>
                <div class="product-total-2">

                  <% Book.all.last(3).reverse.each do |book| %>
                      <div class="single-most-product bd mb-18">
                        <div class="most-product-img">
                          <%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %>
                        </div>
                        <div class="most-product-content">
                          <h4><%= book.author_first_name %> <%=book.author_last_name %></h4>
                          <div class="product-price">
                              <ul>
                                  <li><a href="<%= book_path(book.id) %>"><%= book.title %></a></li><br>
                                  <li><%= number_to_currency(book.price, precision: 0) %></li>
                              </ul>
                          </div>
                        </div>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="banner-area mb-30">
              <div class="banner-img-2">
                <a href="#"><img src="<%= asset_path 'img/banner/33.jpg' %>" alt="banner" /></a>
              </div>
            </div>
            <div class="left-title mb-20">
              <h4>Los más comentados</h4>
            </div>
            <div class="random-area mb-30">
              <div class="product-active-2 owl-carousel" id=commented>
                <div class="product-total-2">
                  <% @bycomments.limit(3).each do |book| %>
                      <div class="single-most-product bd mb-18">
                        <div class="most-product-img">
                          <%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %>
                        </div>
                        <div class="most-product-content">
                          <h4><%= book.author_first_name %> <%=book.author_last_name %></h4>
                          <div class="product-price">
                              <ul>
                                  <li><a href="<%= book_path(book.id) %>"><%= book.title %></a></li><br>
                                  <li><%= number_to_currency(book.price, precision: 0) %></li>
                              </ul>
                          </div>
                        </div>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      </div>

      </div>
    </div>
  </div>
