<p id="notice"><%= notice %></p>

<% if @membership_orders.exists? %>
<h1>Membership Orders</h1>

<table>
  <thead>
    <tr>
      <th>Membership</th>
      <th>Price</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @membership_orders.each do |membership_order| %>
      <tr>
        <td><%= membership_order.membership.name %></td>
        <td><%= number_to_currency(membership_order.membership.price, precision:0) %></td>
        <td><%= membership_order.paid %></td>
        <td><%= link_to 'Borrar', membership_order, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <% if signed_in? && current_user.publisher.method == 'Paypal'%>
      <%= link_to 'Confirmar compra', pre_pay_millings_path, class: 'btn btn-success float-right' %>
    <br>
    <% else %>
      <%= link_to 'Confirmar compra', alternative_millings_path, class: 'btn btn-success float-right' %>
    <% end %>
<% else %>
<p>No tienes ninguna membres√≠a por comprar </p>
<% end %>
