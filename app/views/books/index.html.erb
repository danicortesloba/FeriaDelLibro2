<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author first name</th>
      <th>Author last name</th>
      <th>Publisher</th>
      <th>Cover</th>
      <th>Price</th>
      <th>Isbn</th>
      <th>Synopsis</th>
      <th>Genres</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.cover.thumb.url %>
        <td><%= book.title %></td>
        <td><%= book.author_first_name %></td>
        <td><%= book.author_last_name %></td>
        <td> <%= link_to "#{book.publisher.name}", publisher_path(book.publisher.id) %></td>
        <td><%= book.cover %></td>
        <td><%= book.price %></td>
        <td><%= book.isbn %></td>
        <td><%= book.synopsis %></td>
        <td><%= book.genres.pluck(:name).join(",") %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
