<p id="notice"><%= notice %></p>

<h1>Novedades</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Título</th>
      <th>Autor</th>
      <th>Apellido</th>
      <th>Precio</th>
      <th>ISBN</th>
      <th>Géneros</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %></td>
        <td><%= book.title %></td>
        <td><%= book.author_first_name %></td>
        <td><%= book.author_last_name %></td>
        <td> <%= link_to "#{book.publisher.name}", publisher_path(book.publisher.id) %></td>
        <td><%= book.price %></td>
        <td><%= book.isbn %></td>
        <td><%= book.genres.pluck(:name).join(",") %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

