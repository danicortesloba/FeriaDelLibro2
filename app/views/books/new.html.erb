<% if current_user.addresses.empty? %>
<h3> ¡Oops! Para agregar libros debes tener una dirección registrada. <h3>
<h4>Ingresa una aquí: <%= link_to 'Nueva dirección', new_address_path %><h4>
<% else %>
    <% if current_user.millings.empty? %>
    <h3> ¡Oops! Debes pagar tu membresía de editor para agregar libros. <h3>
    <h4>Revisa aquí las <%= link_to 'Membresías', memberships_path %><h4>
    <% else %>
    <div class="user-login-area mb-70">
      <div class="container">
        <div class="row">

          <div class="col-lg-12">
            <div class="login-title text-center mb-30">
              <h2>Nuevo Libro</h2>
            </div>
          </div>
      </div>
    </div>
    </div>
    <%= render 'form', book: @book %>
    <% end %>
<% end %>
