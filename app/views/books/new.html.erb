<h4>Revisa aquí las <%= link_to 'Membresías', memberships_path %><h4>
<% else %>
<div class="user-login-area mb-70">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Nuevo Libro</h2>
        </div>
      </div>
  </div>
</div>
</div>
<%= render 'form', book: @book %>
<% end %>
