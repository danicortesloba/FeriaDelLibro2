<p id="notice"><%= notice %></p>

<% if @orders.exists? %>

    <h1>Mi carrito de compras</h1>
    <table>
      <thead>
        <tr>
          <th>Título</th>
          <th>Precio</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.book.title %></td>
            <td><%= order.book.price %></td>
            <td><%= link_to "Borrar", order, method: :delete %></td>
          </tr>
        <% end %>
        <tr>
          <td>Total</td>
          <td><%= @orders.map{|order| order.book.price }.sum %></td>
        </tr>

        <tr>
          <td>
            <h2>Dirección de envío</h2>
        </tr>
          </td>
    <% current_user.addresses.each do |address| %>
        <% if address.default == true %>
            <tr>
              <td><%= address.title %></td>
              <td><%= address.address %></td>
              <td><%= link_to "Cambiar", addresses_path%></td>
            </tr>
        <% end %>
    <% end %>
              <tr>
                <td>
                </td>
                <td>
                </td>
                <td>
                  <%= link_to 'Confirmar compra', prepay_billings_path, class: 'btn btn-success float-right' %>
              <tr>
                <td>

      </tbody>
    </table>

<% else %>
    <p> ¡No tienes nada en tu carrito!</p>
<% end %>
