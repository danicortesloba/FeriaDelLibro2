  <div class="user-login-area mb-70">
      <div class="container">
        <div class="row">

          <div class="col-lg-12">
            <div class="login-title text-center mb-30">
              <h2>Editar usuario</h2>
            </div>
          </div>

      </div>
    </div>
  </div>

  <div class="user-login-area mb-70">
    <div class="container">
      <div class="row">

          <%= form_for(resource, as: resource_name, url: user_registration_path, method: :patch) do |f| %>
            <%= devise_error_messages! %>
            <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
                <div class="billing-fields">

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                              <%= f.label :email %><br />
                              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                            </div>
                        </div>
                    </div>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <div class="row">
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div>
                              Esperando confirmación de: <%= resource.unconfirmed_email %>
                            </div>
                          </div>
                      </div>
                  <% end %>

                  <div class="row">
                      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                          <div class="form-group">
                            <%= f.label :contraseña_nueva %> <i>(déjalo en blanco si no lo quieres cambiar)</i><br />
                            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                            <% if @minimum_password_length %>
                              <br />
                              <em><%= @minimum_password_length %> caracteres mínimos</em>
                            <% end %>
                          </div>
                      </div>
                  </div>

                  <div class="row">
                      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                          <div class="form-group">
                            <%= f.label :confirmar_contraseña_nueva %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                          </div>
                      </div>
                  </div>

                  <div class="row">
                      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                          <div class="form-group">
                            <%= f.label :contraseña_actual %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i><br />
                            <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
                          </div>
                      </div>
                  </div>

                  <div class="row mb-50">
                     <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                       <div class="text-center mb-30">
                           <div class="buttons-cart mb-30">
                           <%= f.submit "Actualizar" %>
                           </div>

                       </div>
                     </div>
                  </div>


                </div>
            </div>

          <% end %>

      </div>
    </div>
  </div
