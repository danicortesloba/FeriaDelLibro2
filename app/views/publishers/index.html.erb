<p id="notice"><%= notice %></p>
<div class="product-main-area mb-70">
  <div class="container">
    <div class="row">

                <div class="col-lg-12">
                  <div class="login-title text-center mb-30">
                    <h2>Editoriales</h2>
                  </div>
                </div>

                  <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                    <div class="cart-main-area mb-70">

                      <div class="container">
                        <div class="row">
                          <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <tbody>
                                    <% @publishers.each do |publisher| %>
                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6" style="height: 180px">
                                          <% if publisher.books.any? %>
                                          <p><%= link_to image_tag("#{publisher.books.last.cover.thumb.url}", :alt => publisher.name), publisher_path(publisher) %><br><%= publisher.name %></p>
                                          <% else %>
                                          <p><a href="<%= publisher_path(publisher) %>"><img src="<%= asset_path 'fallback/thumb_fallback.jpeg' %>" alt="book" /></a><br><%= publisher.name %></p>
                                          <% end %>
                                        </div>
                                    <% end %>
                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                          <div class="pagination-area mt-50 mb-100">
                            <div class="list-page-2">
                              <p><%= will_paginate @publishers %></p>
                            </div>
                          </div>
                        </div>
                      </div>

                    </div>
                  </div>

                  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    <div class="shop-left">
                      <div class="left-title mb-20">
                        <h4>Novedades </h4>
                      </div>
                      <div class="random-area mb-30">
                        <div class="product-active-2 owl-carousel" id=latest>
                          <div class="product-total-2">

                            <% Book.all.last(3).reverse.each do |book| %>
                                <div class="single-most-product bd mb-18">
                                  <div class="most-product-img">
                                    <%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %>
                                  </div>
                                  <div class="most-product-content">
                                    <h4><%= book.author_first_name %> <%=book.author_last_name %></h4>
                                    <div class="product-price">
                                        <ul>
                                            <li><a href="<%= book_path(book.id) %>"><%= book.title %></a></li><br>
                                            <li><%= number_to_currency(book.price, precision: 0) %></li>
                                        </ul>
                                    </div>
                                  </div>
                                </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                      <div class="banner-area mb-30">
                        <div class="banner-img-2">
                          <a href="<%= users_about_path %>"><img src="<%= asset_path 'banners/ShowRightHouse2.png' %>" alt="banner" /></a>
                        </div>
                      </div>
                      <div class="left-title mb-20">
                        <h4>Los m√°s comentados</h4>
                      </div>
                      <div class="random-area mb-30">
                        <div class="product-active-2 owl-carousel" id=commented>
                          <div class="product-total-2">
                            <% @bycomments.limit(3).each do |book| %>
                                <div class="single-most-product bd mb-18">
                                  <div class="most-product-img">
                                    <%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %>
                                  </div>
                                  <div class="most-product-content">
                                    <h4><%= book.author_first_name %> <%=book.author_last_name %></h4>
                                    <div class="product-price">
                                        <ul>
                                            <li><a href="<%= book_path(book.id) %>"><%= book.title %></a></li><br>
                                            <li><%= number_to_currency(book.price, precision: 0) %></li>
                                        </ul>
                                    </div>
                                  </div>
                                </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
     </div>
  </div>
</div>
