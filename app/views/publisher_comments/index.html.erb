<h1>Publisher Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Publisher</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publisher_comments.each do |publisher_comment| %>
      <tr>
        <td><%= publisher_comment.content %></td>
        <td><%= publisher_comment.publisher %></td>
        <td><%= publisher_comment.user %></td>
        <td><%= link_to 'Show', publisher_comment %></td>
        <td><%= link_to 'Edit', edit_publisher_comment_path(publisher_comment) %></td>
        <td><%= link_to 'Destroy', publisher_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publisher Comment', new_publisher_comment_path %>
