<%= form_with(model: publisher_comment, local: true) do |form| %>
  <% if publisher_comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(publisher_comment.errors.count, "errores") %> evitaron que se guarde este comentario:</h2>

      <ul>
      <% publisher_comment.errors.each do |attribute, message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
