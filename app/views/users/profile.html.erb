<p id="notice"><%= notice %></p>
<div class="product-main-area mb-70">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Mi perfil</h2>
        </div>
      </div>

                  <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                    <div class="cart-main-area mb-70">
                      <div class="container">

                        <div class="row">
                          <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <thead>
                                    <tr>
                                      <% if @user.role == "Editorial" %>
                                      <th class="product-price">Nombre</th>
                                      <% elsif @user.role == "Lector"%>
                                      <th class="product-price">Nombre</th>
                                      <th class="product-quantity">Apellido</th>
                                      <% end %>
                                      <th class="product-thumbnail">Email </th>
                                      <th class="product-name">Contraseña</th>

                                    </tr>
                                  </thead>
                                  <tbody>
                                        <tr>
                                          <% if @user.role == "Editorial" %>
                                          <td class="product-name"><p><strong><%= @publisher.name%></strong></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                          <% elsif @user.role == "Lector"%>
                                          <td class="product-name"><p><%= @reader.firstname%> </p><p><%= link_to 'Cambiar', edit_reader_path(@reader) %></p></td>
                                          <td class="product-name"><p><%= @reader.lastname%> </p><p> <%= link_to 'Cambiar', edit_reader_path(@reader) %></p></td>
                                          <% end %>
                                          <td class="product-name"><p><%= @user.email %></p><p> <%= link_to 'Cambiar', edit_user_registration_path %> </p></td>
                                          <td class="product-name"><%= link_to 'Cambiar contraseña', edit_user_registration_path %></td>

                                      </tr>
                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>

                        <% if @user.role == "Editorial" %>
                        <div class="col-lg-12">
                          <div class="login-title text-left mb-30">
                            <h4>Datos de facturación</h4>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <thead>
                                    <tr>
                                      <th class="product-thumbnail">Rut</th>
                                      <th class="product-name">Razón Social</th>
                                      <th class="product-price">Giro</th>
                                      <th class="product-price">Dirección de Facturación</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                        <tr>
                                            <td class="product-name"><p><%= @publisher.rut%></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                            <td class="product-name"><p><%= @publisher.razon%></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                            <td class="product-name"><p><%= @publisher.giro%></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                            <td class="product-name"><p><%= @publisher.address%></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                      </tr>
                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>

                        <div class="col-lg-12">
                          <div class="login-title text-left mb-30">
                            <h4>Pago de membresía</h4>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <thead>
                                    <tr>
                                      <th class="product-thumbnail">Método</th>
                                      <th class="product-name">Tipo de Comprobante</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                        <tr>
                                            <td class="product-name"><p><%= @publisher.method%></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                            <td class="product-name"><p><%= @publisher.voucher%></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                      </tr>
                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>

                        <div class="col-lg-12">
                          <div class="login-title text-left mb-30">
                            <h4>Redes sociales</h4>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <thead>
                                    <tr>
                                      <th class="product-thumbnail">Twitter</th>
                                      <th class="product-name">Facebook</th>
                                      <th class="product-price">Instagram</th>
                                      <th class="product-price">Página Web</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                        <tr>
                                            <td class="product-name"><p><%= @publisher.twitter %></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                            <td class="product-name"><p><%= @publisher.facebook %></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                            <td class="product-name"><p><%= @publisher.instagram %></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                            <td class="product-name"><p><%= @publisher.website %></p><p><%= link_to 'Cambiar', edit_publisher_path(@publisher) %></p></td>
                                      </tr>
                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>

                        <% end %>

                        <% if @user.role == "Lector" %>
                        <div class="col-lg-12">
                          <div class="login-title text-left mb-30">
                            <h4>Mis direcciones</h4>
                          </div>
                        </div>

                        <% if @addresses.exists? %>
                            <div class="row">
                              <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                                <form action="#">
                                  <div class="table-content table-responsive">
                                    <table>
                                      <thead>
                                        <tr>
                                          <th class="product-thumbnail">Nombre</th>
                                          <th class="product-name">Dirección</th>
                                          <th class="product-price">Editar</th>
                                          <th class="product-quantity">Eliminar</th>
                                          <th class="product-subtotal">Dirección de envío</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <% @addresses.each do |address| %>
                                            <tr>
                                                <td class="product-name"><%= address.title %></td>
                                                <td class="product-name"><%= address.address %><br><%=address.commune %>, <%= address.region %></td>
                                                <td class="product-remove"><%= link_to 'Editar', edit_address_path(address) %></td>
                                                <td class="product-remove"><%= link_to 'Eliminar', address, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
                                                <% if address.default == true %>
                                                    <td class="product-name">Dirección actual de envío <img class="service-blue-img" src="<%= asset_path 'img/icon-img/service-1.png' %>" alt="banner" /></td>
                                                <% else %>
                                                    <td class="product-name"><%= link_to 'Hacer dirección de envío', addresses_default_path(address) %></td>
                                                <% end %>
                                             </tr>
                                         <% end %>
                                      </tbody>
                                    </table>
                                  </div>
                                </form>
                              </div>
                            </div>
                        <% else %>
                        <h3> Aún no has ingresado direcciones </h3>
                        <% end %>
                        <div class="row">
                                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                        <div class="wc-proceed-to-checkout">
                                            <ul>
                                                <li><%= link_to 'Nueva dirección', new_address_path %></li>
                                            </ul>
                                        </div>
                                    </div>
                        </div>

                        <% end %>

                            <% if @user.role == "Editorial" %>
                                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                                  <div class="login-title text-left mb-30">
                                    <h4>Mi dirección</h4>
                                    <p>Esta es la dirección donde tus lectores pueden ir a buscar sus libros, si así lo eligen. En el caso de que no tengas una oficina puedes, por ejemplo, poner una estación de metro. Si tus compradores eligen recoger los libros, te enviaremos su dirección de correo electrónico para que coordines la entrega.</p>
                                  </div>
                                </div>

                                <% if @addresses.exists? %>
                                      <div class="row">
                                        <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                                          <form action="#">
                                            <div class="table-content table-responsive">
                                              <table>
                                                <thead>
                                                  <tr>
                                                    <th class="product-thumbnail">Nombre</th>
                                                    <th class="product-name">Dirección</th>
                                                    <th class="product-price">Editar</th>
                                                    <th class="product-price">Eliminar</th>
                                                  </tr>
                                                </thead>
                                                <tbody>
                                                      <tr>
                                                          <td class="product-name"><%= @lastaddress.title%></td>
                                                          <td class="product-name"><%= @lastaddress.address %><br> <%= @lastaddress.commune %>, <% @lastaddress.region %></td>
                                                          <td class="product-remove"><%= link_to 'Editar', edit_address_path(@lastaddress) %></td>
                                                          <td class="product-remove"><%= link_to 'Eliminar', @lastaddress, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
                                                       </tr>
                                                </tbody>
                                              </table>
                                            </div>
                                          </form>
                                        </div>
                                      </div>
                                <% else %>
                                  <div class="row">
                                    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                                      <div class="login-title text-left mb-30">
                                          <div class="row">
                                                      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                          <div class="wc-proceed-to-checkout mb-30">
                                                              <ul>
                                                                  <li><p> Aún no has ingresado direcciones </p><%= link_to 'Nueva dirección', new_address_path %></li>
                                                              </ul>
                                                          </div>
                                                      </div>
                                          </div>
                                      </div>
                                    </div>
                                  </div>
                                <% end %>

                                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                                  <div class="login-title text-left mb-30">
                                    <h4>Mi cuenta</h4>
                                    <p>En esta cuenta te depositaremos los pagos por tus ventas.</p>
                                  </div>
                                </div>

                                <% if current_user.bankaccounts.exists? %>
                                    <div class="row">
                                      <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                                        <form action="#">
                                          <div class="table-content table-responsive">
                                            <table>
                                              <thead>
                                                <tr>
                                                  <th class="product-thumbnail">Cuenta</th>
                                                  <th class="product-price">Editar</th>
                                                </tr>
                                              </thead>
                                              <tbody>
                                                    <tr>
                                                        <td class="product-name text-left">Titular: <%= @bankaccount.name%><br> Banco:<%= @bankaccount.bank%><br>Cuenta: <%= @bankaccount.account%><br> Tipo: <%= @bankaccount.accounttype%><br>Rut: <%= @bankaccount.rut%><br>Email: <%= @bankaccount.email%><br></td>
                                                        <td class="product-remove"><%= link_to 'Editar', edit_bankaccount_path(@bankaccount) %></td>
                                                     </tr>
                                              </tbody>
                                            </table>
                                          </div>
                                        </form>
                                      </div>
                                    </div>
                                <% else %>
                                  <div class="row">
                                              <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                  <div class="wc-proceed-to-checkout">
                                                    <p> Aún no has ingresado una cuenta </p>
                                                      <ul>
                                                          <li><%= link_to 'Nueva cuenta', new_bankaccount_path %></li>
                                                      </ul>
                                                  </div>
                                              </div>
                                  </div>
                                <% end %>
                        <% end %>

                      </div>
                    </div>
                  </div>
              <%= render 'layouts/sidepanel' %>
    </div>
    </div>
</div>
