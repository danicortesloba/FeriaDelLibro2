<p id="notice"><%= notice %></p>

<h1>Memberships</h1>

<table>
  <thead>
    <tr>
      <th>Plan</th>
      <th>Descripción</th>
      <th>Duración</th>
      <th>Libros subidos</th>
      <th>Libros vendidos</th>
      <th>Tienda exclusiva de editorial</th>
      <th>Promoción de novedades en redes sociales</th>
      <th>Precio/th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.name %></td>
        <td><%= membership.description %></td>
        <td><%= membership.benefit1 %></td>
        <td><%= membership.benefit2 %></td>
        <td><%= membership.benefit3 %></td>
        <td><%= membership.benefit4 %></td>
        <td><%= membership.benefit5 %></td>
        <td><%= number_to_currency(membership.price, precision: 0) %></td>
        <% if signed_in? && current_user.role == 'admin'%>
        <td><%= link_to 'Editar', edit_membership_path(membership) %></td>
        <td><%= link_to 'Eliminar', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in? && current_user.role == 'admin'%>
<%= link_to 'New Membership', new_membership_path %>
<% end %>
