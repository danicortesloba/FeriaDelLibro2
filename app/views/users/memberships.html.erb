<% if user_signed_in? && current_user.role == 'admin' %>
<div class="product-main-area">
    <div class="row">

      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Membresías</h2>
        </div>
      </div>

                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="cart-main-area mb-5">
                      <div class="container">

                        <div class="row">
                          <div class="col-lg-offset-3 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                            <form action="#">
                              <div class="table-content table-responsive">
                                <table>
                                  <tbody>

                                        <tr>
                                            <th class="product-name">Plan</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><h5><%= membership.name %></h5></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Descripción</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.description %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Duración</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit1 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Libros subidos</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit2 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Libros vendidos</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit3 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Tienda exclusiva de editorial</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit4 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Promoción de novedades en redes sociales</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-name"><%= membership.benefit5 %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Precio</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-price"><%= number_to_currency(membership.price, precision: 0) %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Editar</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-price"><%= link_to 'Editar', edit_membership_path(membership) %></td>
                                            <% end %>
                                        </tr>
                                        <tr>
                                            <th class="product-name">Eliminar</th>
                                            <% @memberships.each do |membership| %>
                                              <td class="product-price"><%= link_to 'Eliminar', membership, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
                                            <% end %>
                                        </tr>


                                  </tbody>
                                </table>
                              </div>
                            </form>
                          </div>
                        </div>

                        <div class="row">
                                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 mb-50">
                                        <div class="wc-proceed-to-checkout">
                                            <ul>
                                                <li><%= link_to 'Nueva membresía', new_membership_path %></li>
                                            </ul>
                                        </div>
                                    </div>
                        </div>

                      </div>
                    </div>
                  </div>


            </div>

</div>

<% end %>
