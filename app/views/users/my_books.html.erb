<p id="notice"><%= notice %></p>

<% if current_user.role == 'editorial' %>

<h1>Mis libros</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Título</th>
      <th>Autor</th>
      <th>Apellido</th>
      <th>Precio</th>
      <th>ISBN</th>
      <th>Géneros</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to image_tag("#{book.cover.thumb.url}", :alt => book.title), book_path(book.id) %></td>
        <td><%= book.title %></td>
        <td><%= book.author_first_name %></td>
        <td><%= book.author_last_name %></td>
        <td><%= book.price %></td>
        <td><%= book.isbn %></td>
        <td><%= book.genres.pluck(:name).join(",") %></td>
        <td><%= link_to 'Detalle', book %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Borrar', book, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        <td> <%= link_to 'Nuevo Libro', new_book_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p> Tú no eres editorial </p>
<% end %>
