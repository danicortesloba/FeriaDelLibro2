<% if user_signed_in? && current_user.role == 'Editorial' %>
<p id="notice"><%= notice %></p>
<div class="product-main-area mb-70">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <div class="login-title text-center mb-30">
          <h2>Mis ventas</h2>
        </div>
      </div>
      <% if @orders.any? %>
      <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
              <div class="cart-main-area mb-70">
                <div class="container">
                  <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                      <form action="#">
                        <div class="table-content table-responsive">
                          <table>
                            <thead>
                              <tr>
                                <th class="product-name">Título</th>
                                <th class="product-price">Fecha máxima de entrega</th>
                                <th class="product-name">Nombre Lector</th>
                                <th class="product-name">Dirección de envío</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @orders.each do |order| %>
                              <tr>
                                <td class="product-quantity"><%= order.book.title %></td>
                                <td class="product-quantity"><%= @expiration %></td>
                                <td class="product-quantity"><%= order.user.reader.firstname %> <%= order.user.reader.lastname %></td>
                                <% @addresses.each do |address| %>
                                <td class="product-quantity"><p><%= address.address %></p> <p><%= address.commune %>, <%= address.region %></p></td>
                                <% end %>
                             </tr>
                             <% end %>
                            </tbody>
                          </table>
                        </div>
                      </form>
                    </div>
                 </div>


                </div>
              </div>
      </div>
      <% else %>
      <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
              <div class="cart-main-area mb-70">
                <div class="container">
                  <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <h3>Aún no tienes ventas</h3>
                    </div>
                  </div>
                </div>
              </div>
      </div>
      <% end %>
      <%= render 'layouts/sidepanel' %>
      </div>
    </div>
  </div>
<% end %>
